<!DOCTYPE html>
<html>
  <head>
    <title>CommentApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  </head>

  <body>
    <div class="container">
      <div id="head-manu">
        <% if logged_in? %>
          <%= link_to "ホーム", current_user, class: "btn" %>
          <%= link_to "テキストを追加", new_text_path, class: "btn" %>
          <%= link_to "テキスト一覧", texts_path, class: "btn" %>
          <%= link_to "ユーザー一覧", users_path, class: "btn" %>
          <%= link_to "設定", edit_user_path(current_user), class: "btn" %>
          <%# <%= button_to "ログアウト", logout_path, data: { "turbo-method": :delete}, class: "btn" %>
          <%= button_to "ログアウト", logout_path, method: :delete, data: {turbo: false}, class: "btn" %>
        <% else %>
          <%= link_to "新規登録", new_user_path, class: "btn" %>
          <%= link_to "ログイン", login_path, class: "btn" %>
        <% end %>
      </div>
    </div>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
