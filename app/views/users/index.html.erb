<h1>ユーザー一覧</h1>
<div>
  <% @users.each do |user| %>
    <div>
      <%= link_to user, class: "btn" do%>
        <h3><%= user.name %></h3>
      <% end %>
      <% if current_user.admin? && !current_user?(user) %>
        <%= link_to "削除", user, data: { "turbo-method": :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn" %>
      <% end %>
    </div>
  <% end %>
</div>
<%= will_paginate @users, previous_label: '< 前へ', next_label: '次へ >' %>