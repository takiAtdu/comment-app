require "pkg-config"
require "native-package-installer"

if File.exist?(File.join(__dir__, "..", "vendor"))
  task :default => "nothing"
else
  task :default => "dependency:check"
end

task :nothing do
end

namespace :dependency do
  desc "Check dependency"
  task :check do
    package_id = "poppler-glib"
    unless PKGConfig.check_version?(package_id, 0, 12, 0)
      unless NativePackageInstaller.install(:alt_linux => "libpoppler-glib-devel",
                                            :conda => "poppler",
                                            :debian => "libpoppler-glib-dev",
                                            :redhat => "pkgconfig(#{package_id})",
                                            :arch_linux => "poppler-glib",
                                            :homebrew => "poppler",
                                            :macports => "poppler",
                                            :msys2 => "poppler")
        exit(false)
      end
    end
  end
end
